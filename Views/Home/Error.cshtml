@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="text-danger">Oops! Something went wrong.</h1>
    <p class="lead">An unexpected error has occurred. Please try again later.</p>

    <div class="alert alert-warning">
        <strong>Error Details:</strong> @ViewData["ErrorMessage"]
    </div>

    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Return to Home</a>
</div>